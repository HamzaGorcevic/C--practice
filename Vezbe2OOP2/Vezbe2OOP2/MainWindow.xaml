<Window x:Class="Vezbe2OOP2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vezbe2OOP2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
         Loaded="Windows_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="60*"/>

        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0"  Name="panel" Background="Yellow" >
            <ComboBox Margin="20 40 20 20" Name="cbSelectColor" Width="300" Height="40" Text="Select Color">

            </ComboBox>
            <Button Margin="30" Height="40" Background="Blue" Foreground="White">Zatvori</Button>
                    <TextBlock Height="40" Width="300" Background="White" Foreground="Black" FontSize="20" x:Name="dogText"></TextBlock>
        </StackPanel>

    </Grid>
</Window>
