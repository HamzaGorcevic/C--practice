<Window x:Class="BlackHoleGame.Views.GravitaionSpeed"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackHoleGame.Views"
        mc:Ignorable="d"
        Title="GravitaionSpeed" Height="450" Width="800">

    <Grid Background="Navy">
        <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Foreground="Gold" FontWeight="Bold" FontSize="30"  Margin="15" Text="Input gravity of Black hole in milions"/>
            <TextBox Height="50" BorderBrush="Gold" BorderThickness="3" x:Name="tbGravity"/>
            <Button  Height="50" Margin="0 18 " Click="Button_Click" Foreground="Gold" Background="Navy" FontSize="20" FontWeight="Bold" BorderBrush="Gold" BorderThickness="3" Content="Submit"/>
        </StackPanel>
    </Grid>
</Window>
