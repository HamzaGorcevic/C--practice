<UserControl x:Class="Vojska.Views.DodajVojnika"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vojska.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

 
    <Grid Width="400" Background="White">
        
        <StackPanel>
            <TextBlock Text="Unesite ime"/>
            <TextBox Name="ime"/>
            <TextBlock Text="Unesite datum"/>
            <TextBox Name="datum"/>
            <TextBlock Text="Unesite Cin"/>
            <ComboBox x:Name="cbCin">
                <ComboBoxItem Content="Razvodnik"/>
                <ComboBoxItem Content="Desetar"/>
                <ComboBoxItem Content="Mladji Vodnik"/>

            </ComboBox>
            <Button Click="Button_Click" Margin="10" Content="Dodaj Vojnika"/>
        </StackPanel>

    </Grid>
</UserControl>
